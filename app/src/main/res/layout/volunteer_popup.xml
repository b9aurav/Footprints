<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_margin="25dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/bg_round_white">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/help">

        </ImageView>

        <TextView
            android:id="@+id/tvHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="7dp"
            android:text="Incharge"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvIncharge1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvHeading"
            android:layout_marginLeft="30dp"
            android:fontFamily="sans-serif-smallcaps"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:text="Volunteer 1"
            android:textColor="@color/orange_logo"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/cb_email"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:src="@drawable/ic_clipboard"/>

        <TextView
            android:id="@+id/tvInchargeEmail1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvIncharge1"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:text="Email : abc@abc.com"
            android:textColor="@color/white"
            android:textSize="17dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/cb_contact"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:src="@drawable/ic_clipboard"/>

        <TextView
            android:id="@+id/tvInchargeMob1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvInchargeEmail1"
            android:layout_marginLeft="10dp"
            android:paddingBottom="10dp"
            android:text="Mobile No. : +91 1234567890"
            android:textColor="@color/white"
            android:textSize="17dp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout1"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvIncharge2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvHeading"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:text="Volunteer 1"
            android:fontFamily="sans-serif-smallcaps"
            android:textColor="@color/orange_logo"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/cb_email2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:src="@drawable/ic_clipboard"/>

        <TextView
            android:id="@+id/tvInchargeEmail2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvIncharge1"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:text="Email : abc@abc.com"
            android:textColor="@color/white"
            android:textSize="17dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/cb_contact2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:src="@drawable/ic_clipboard"/>

        <TextView
            android:id="@+id/tvInchargeMob2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvInchargeEmail1"
            android:layout_marginLeft="10dp"
            android:paddingBottom="10dp"
            android:text="Mobile No. : +91 1234567890"
            android:textColor="@color/white"
            android:textSize="17dp" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/dismiss"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:textSize="18dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:text="Dismiss"
        android:layout_marginTop="10dp"
        android:background="@drawable/popup_button_bg"/>

</LinearLayout>