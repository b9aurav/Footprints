<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VolunteerFragment"
    android:background="@color/purple_200">

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/help"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp">

    </ImageView>
    <TextView
        android:id="@+id/headingTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="Incharge"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="7dp"
        android:textColor="@color/white"
        android:textStyle="bold"/>

            <TextView
                android:id="@+id/volunteer1TV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/headingTV"
                android:textSize="25dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="40dp"
                android:layout_marginBottom="5dp"
                android:text="Volunteer 1"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/volunteer1EmailTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/volunteer1TV"
                android:textSize="20dp"
                android:layout_marginLeft="80dp"
                android:layout_marginBottom="5dp"
                android:text="Email : abc@abc.com"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/volunteer1MobTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/volunteer1EmailTV"
                android:textSize="20dp"
                android:layout_marginLeft="80dp"
                android:text="Mobile No. : +91 1234567890"
                android:textColor="@color/white"
                android:paddingBottom="10dp"/>
</RelativeLayout>